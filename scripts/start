#!/usr/bin/env node

var fs    = require('fs')
var spawn = require('child_process').spawn


var link = fs.readlinkSync('out/latest').split('/');

var cpu  = link[link.length-2]
var type = link[link.length-1]

var cpu_family;
switch(cpu)
{
  case 'armv6':
    cpu_family = 'arm'
  break

  case 'i386':
  case 'i486':
  case 'i586':
  case 'i686':
  case 'i786':
    cpu_family = 'i386'
  break

  case 'nocona':
  case 'x86_64':
    cpu_family = 'x86_64'
  break
}

var command = 'qemu-system-'+cpu_family
var args    = ['-enable-kvm']

switch(type)
{
  case 'iso':
    args.push('-cdrom', 'out/latest')
  break

  case 'img':
    args.push('-hda', 'out/latest')
  break

  default:
    throw 'Unknown rootfs type "'+type+'"'
}

// check if kvm is supported
var kvm = /(vmx|svm)/;
var contents = "";

try
{
  contents = fs.readFileSync('/proc/cpuinfo');
} catch(e){
  throw(e);
}

if(kvm.test(contents) === false)
{
  // disable kvm
  console.log("Your computer does not support kvm. NodeOS will be slower without it.");
  args.shift();
}

spawn(command, args, {stdio: 'inherit'})
.on('error', console.trace.bind(console))
